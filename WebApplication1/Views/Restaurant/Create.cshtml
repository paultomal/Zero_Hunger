@model WebApplication1.EF.Restaurant_Table

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

@using (Html.BeginForm())
{

    @Html.AntiForgeryToken()
    <div class="form-horizontal" >
        <h4>Restaurant</h4>
        

        <div class="form-group" align="center">
            Restaurant ID:
            <div class="col-md-10"  >
                @Html.EditorFor(model => model.Restaurant_ID, new { htmlAttributes = new { @class = "form-control" } })
               
            </div>
        </div>

        <div class="form-group" align="center">
            Restaurant Name:
            <div class="col-md-10">
                @Html.EditorFor(model => model.Restaurant_Name, new { htmlAttributes = new { @class = "form-control" } })
               
            </div>
        </div>

        <div class="form-group" align="center">
            Address:
            <div class="col-md-10">
                @Html.EditorFor(model => model.Address, new { htmlAttributes = new { @class = "form-control" } })
               
            </div>
        </div>

        <div class="form-group" align="center">
            Contact:
            <div class="col-md-10">
                @Html.EditorFor(model => model.Contact, new { htmlAttributes = new { @class = "form-control" } })
               
            </div>
        </div>

        <div class="form-group" align="right">
            <button class="btn btn-success">
                <input type="submit" value="Create" class="btn btn-default" />
            </button>
        </div>
    </div>
}

<div>
    
    <a class="btn btn-dark" href="/Restaurant/Index">Back to List</a>
</div>
